groups:
- name: alert-rules
  rules:

########## ETCD EXPORTER RULES ##########

#### IMPORTANT NOTE: These alerts only support monitoring a single etcd cluster per promemtheus instance ####

# Ensure there is at least one etcd node reporting metrics
  - alert: ECTDAbsent
    expr: absent(etcd_server_id)
    for: 10s
    labels:
      service: etcd
      severity: critical
      severity_num: 300
    annotations:
      description: 'No etcd metric endpoints found'

# Ensure there are an odd number of etcd nodes providing metrics
  - alert: ECTDOddCount
    expr: (count(etcd_server_id) % 2) != 1
    for: 10s
    labels:
      service: etcd
      severity: critical
      severity_num: 300
    annotations:
      description: 'An odd number of etcd nodes has not been found.'

# Ensure there is a leader in the etcd cluster
  - alert: ECTDLeader
    expr: max(etcd_server_has_leader) < 1
    for: 10s
    labels:
      service: etcd
      severity: critical
      severity_num: 300
    annotations:
      description: 'An etcd leader node has not been elected'

