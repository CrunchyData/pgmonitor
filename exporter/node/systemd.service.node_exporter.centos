[Unit]
Description=Node Exporter Server
After=network.target

[Service]
WorkingDirectory=/var/lib/prometheus/
PermissionsStartOnly=true
User=prometheus
ExecStart=/var/lib/prometheus/node_exporter --collector.textfile.directory=/var/lib/prometheus/iodata/
ExecStop=/usr/bin/kill -9 

Restart=always
[Install]
WantedBy=multi-user.target

